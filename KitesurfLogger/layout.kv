<PlyerWindow>:
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: root.recording_text
        MDRectangleFlatButton:
            text: root.recording_button_text
            size_hint: 1, 1
            line_color: 'green' if root.recording_active else 'red'
            on_press: root.start_stop()