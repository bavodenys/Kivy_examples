#:import sys sys
#:import MapSource kivy_garden.mapview.MapSource

WindowManager:
    MainWindow:
    RecordWindow:

<MainWindow>:
    name: 'main'
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: 'Sport logger'
            right_action_items: [["information-outline", lambda x: app.call_about()]]
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            MDList:
                id: activity_overview
    MDFloatingActionButtonSpeedDial:
        id: record_activity_menu
        data: app.activities_record
        root_button_anim: True
        callback: app.callback

<RecordWindow>:
    name: 'record'
    MDBoxLayout:
        orientation: 'vertical'
        MapView:
            id: log_map
            lat: 50.00
            lon: 3.00
            zoom: 6
        MDLabel:
            text: "Run"


<Run_activity>:
    md_bg_color: app.theme_cls.primary_light
    orientation: 'horizontal'
    on_press: app.activity_pressed()
    size_hint: 1, None
    height: dp(100)
    MDIcon:
        icon: 'run'
        size_hint: 0.3, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        font_size: dp(80)
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            orientation: 'horizontal'
            MDLabel:
                text: root.date
            MDLabel:
                text: root.start_time
        MDBoxLayout:
            orientation: 'horizontal'
            MDLabel:
                text: root.distance
            MDLabel:
                text: root.duration
        MDBoxLayout:
            orientation: 'horizontal'
            MDLabel:
                text: root.pace

<Ride_activity>:
    md_bg_color: app.theme_cls.primary_light
    orientation: 'horizontal'
    on_press: app.activity_pressed()
    size_hint: 1, None
    height: dp(100)
    MDIcon:
        icon: 'bike'
        size_hint: 0.3, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        font_size: dp(80)
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            orientation: 'horizontal'
            MDLabel:
                text: root.date
            MDLabel:
                text: root.start_time
        MDBoxLayout:
            orientation: 'horizontal'
            MDLabel:
                text: root.distance
            MDLabel:
                text: root.duration
        MDBoxLayout:
            orientation: 'horizontal'
            MDLabel:
                text: root.avg_spd

